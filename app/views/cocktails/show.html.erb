<h2><%= @cocktail.name %></h2>
<h5>Ingredients</h5>

<% @doses.each do |dose| %>
  <ul>
    <li><%= dose.description %> - <%= dose.ingredient.name %> -
      <%= link_to "Delete",
                  cocktail_dose_path(@cocktail, dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li></li>
  </ul>
<% end %>

<div>
  <%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail) %>
</div>
<div>
  <%= link_to 'Back', cocktails_path %>
</div>
