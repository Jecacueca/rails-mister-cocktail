<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <a class="navbar-brand" href="#">
    <p class="cocktail-logo"><i class="fas fa-cocktail"></i></p>
  </a>
 <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="search-btn">
      <i class="fas fa-search icon"></i>
    </button>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.7)), url(https://images.unsplash.com/photo-1598994341109-6e9076eb99f8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2850&q=80);">
  <div class="container">
    <h1>It's 5pm somewhere...</h1>
    <a class="btn btn-flat" href="#">
      <%= link_to 'Create Cocktail', new_cocktail_path %>
    </a>
  </div>
</div>

<div class="card-container">
  <% @cocktails.each do |cocktail| %>
    <div class="cocktail-card">
    <img src="https://images.unsplash.com/photo-1570598912132-0ba1dc952b7d?ixlib=rb-1.2.1&auto=format&fit=crop&w=668&q=80" />
      <div class="cocktail-info">
        <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
      </div>
    </div>
  <% end %>
</div>

